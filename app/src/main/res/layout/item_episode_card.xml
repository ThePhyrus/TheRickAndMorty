<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin"
    android:backgroundTint="@color/mr_main_background_color"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/radius_card_corner">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvEpisodeName"
            android:layout_height="wrap_content"
            android:text="Название эпизода" />

        <TextView
            android:id="@+id/tvEpisodeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Номер зпизода" />

        <TextView
            android:id="@+id/tvEpisodeAirDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата выхода" />


    </LinearLayout>


</androidx.cardview.widget.CardView>